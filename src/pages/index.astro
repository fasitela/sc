---
import RoomBuilder from "../components/RoomBuilder.astro";
import RoomPreview from "../components/RoomPreview.astro";
import StyleChooser from "../components/StyleChooser.astro";
import FunutureChooser from "../components/FunutureChooser.astro";
import Welcome from "../components/Welcome.astro";
import FasitelaIcon from "../components/FasitelaIcon.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0"
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link
      href="https://unpkg.com/tailwindcss@^2/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <link href="main.css" rel="stylesheet" />
    <title>Fasitela</title>
  </head>
  <body>
    <div class="flex flex-col">
      <div class="logo">
        <FasitelaIcon />
      </div>
      <Welcome />
      <RoomBuilder />
      <StyleChooser />
      <RoomPreview />
      <FunutureChooser />
      <div
        id="next-button"
        class="next fixed hidden text-center text-l font-bold text-white flex items-center justify-center"
      >
        Далее
      </div>
    </div>
    <script>
      import { hideNextButton } from "../utils/nextButton";
      import { gotoNext } from "../utils/currentPage";

      const nextButton = document.querySelector("#next-button");
      nextButton.addEventListener("click", () => {
        gotoNext();
        hideNextButton();
      });
    </script>
  </body>
</html>

<style>
  .logo {
    margin-left: 100px;
    margin-top: 50px;
    position: fixed;
  }
  @media only screen and (max-width: 768px) {
    /* For mobile phones: */
    .logo {
      margin-left: 5vw;
      margin-top: 5vh;
    }
  }
</style>
